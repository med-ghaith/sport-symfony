{% extends 'back.base.html.twig' %}

{% block title %}Gym{% endblock %}

{% block body %}
    <h1>Gym</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gym.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gym.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{gym.description|slice(0,40)}}...</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ gym.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gymbackoffice') }}">back to list</a>

    <a href="{{ path('gymdash_edit', {'id': gym.id}) }}">edit</a>

    {{ include('back-office/gymbackoffice/_delete_form.html.twig') }}
{% endblock %}
