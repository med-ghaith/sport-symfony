{% extends 'front.base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
<div style="margin-top:130px;" class="mt-150">
    <h2>Add Reclamation</h2>
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}
    
    {{ form_widget(form) }}
    {{ form_row(form.Add, {'label':'Send'},{'attr':{ 'class':'btn btn-danger btn-lg ' }}) }}
{{ form_end(form) }}
</div>
{% endblock %}