        function changeImage(a, idEx) {
            document.getElementById('img-id' + idEx).src = a;
        }
    </script>
{% endblock %}
{% block body %}
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div style="display: flex">
                    <div class="col-md-5">
                        <h4 class="card-title">EVENT LIST</h4>
                    </div>
                    <form method="post" class="forms-sample" style="margin-left: -42px" action="{{ path('filter_back') }}">
                        <div class="form-group col-md-4" >

                            <div class="form-check">
                                <label class="form-check-label" style="width: 92px;margin-left: -2px;margin-right: 10px;">
                                    <input style="border: solid #00d25b;" type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="NameEvent"> Name event </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label" style="width: 86px;margin-left: -2px;margin-right: 10px;">
                                    <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="PriceEvent" > Price event </label>
                            </div>
                            <div class="form-check">
                                <label class="form-check-label" style="width: 148px;margin-left: -2px;margin-right: 10px;">
                                    <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="NbParticipants" > Participants number </label>
                            </div>

                            <button type="Submit" style="margin: auto; ">Sort</button>
                        </div>
                    </form>

                </div>

                <ul class="navbar-nav w-100" style="margin-top: 18px;">
                    <li class="nav-item w-100">
                        <form name="Search-method" id="Search-method"method="post" class="forms-sample" style="display: flex" action="{{ path('filter_back') }}">
                            <div class="form-group col-md-5">
                                <label style="margin-top: 11px;margin-left: 10px;margin-right: 14px;border-bottom: 6px solid #0090e7;padding-bottom: 7px;border-bottom-style: dotted;">Search Options</label>
                                <select name="optionsearch" class="js-example-basic-single" style="width: 200px;height: 38px; color: white; background-color: #191c24; border-radius: 4px;text-align: center;border: 2px solid #0090e7;margin-right: 15px;">
                                    <option value="NameEvent">Event name</option>
                                    <option value="DateDebut">Begins at</option>
                                    <option value="DateFin">Ends at</option>
                                </select>
                            </div>
                            <div class="form-group col-md-7">
                                <div class="input-group">
                                    <input name="Search" type="text" class="form-control" placeholder="Search Events" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-sm btn-primary" type="Submit">Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">

            <div class="container-fluid py-1 px-3">
                <div class="page-content">
                    <div class="main-content">
                        <div class="container">
                            <div class="row">
                                <section id="our-trainers" class="our-trainers">
                                    {% for event in events %}
                                        <div class="our-trainer-box col-md-4 col-sm-6 col-xs-12">
                                            <div class="product-image-wrapper">
                                                <div class="product-content">
                                                    <div class="product-image product-trainer">
                                                        <a href="trainer-profile.html"><img
                                                                    src={{ event.imageUrl }} alt=""/></a>
                                                    </div>
                                                    <div class="info-products">
                                                        <div class="img-trainers">
                                                            <img src={{ asset("front/assets/images/boxing-icon-1.png") }} alt=""/>
                                                        </div>
                                                        <div class="product-name">
                                                            <a href="trainer-profile.html">{{ event.category }}</a>
                                                            <div class="product-bottom"></div>
                                                        </div>

                                                        <div class="product-info">
                                                            <p>{{ event.description }}. </p>
                                                        </div>

                                                        <h5>
                                                            Number of reservations: <label
                                                                    style="color: #0d6efd">{{ event.nombreReservation  }}</label>
                                                        </h5>
                                                        <h5>
                                                            subscription fees : <label
                                                                    style="color: #0d6efd">{{ event.fees }}</label>
                                                        </h5>
                                                        <h5>
                                                           start date: <label
                                                                    style="color: #0d6efd">{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</label>
                                                        </h5>
                                                        <h5>
                                                            end date: <label
                                                                    style="color: #0d6efd">{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</label>
                                                        </h5>
                                                        <a href="{{ path('event_show', {'id': event.id}) }}">show</a>
                                                        <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                    {{ knp_pagination_render(events) }}

                                </section>
                            </div>
                            <button style="background-color: orange"> <a href="{{ path('new_event') }}">Create new</a> </button>

                        </div>
                    </div>
                </div>

            </div>
    </main>


{% endblock %}

