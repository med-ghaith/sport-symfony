{% block body %}
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
             navbar-scroll="true">
            <div class="container-fluid py-1 px-3">
                <div class="page-content">
                    <div class="main-content">
                        <div class="container">
                            <div class="row">
                                <section id="our-trainers" class="our-trainers">

                                    {% for product in products %}

                                        <div class="our-trainer-box col-md-3 col-sm-6 col-xs-12">
                                            <div class="product-image-wrapper">
                                                <div class="product-content">
                                                    <div class="product-image product-trainer">
                                                        <a href="#"><img alt="" src="{{ asset('uploads/image/' ~ product.imageUrl)}}" alt=""></a>
                                                    </div>
                                                    <div class="info-products">
                                                        <div class="img-trainers">
                                                            <img src={{ asset("front/assets/images/boxing-icon-1.png") }} alt=""/>
                                                        </div>
                                                        <div class="product-name">
                                                            <a href="trainer-profile.html">{{ product.name }}</a>
                                                            <div class="product-bottom"></div>
                                                        </div>

                                                        <div class="product-info">
                                                            <p>{{ product.description }}. </p>
                                                        </div>
                                                        <div class="product-info">
                                                            <p>{{ product.PRICE }}  DT </p>
                                                        </div>
                                                        <a href=" {{ path('product_delete', {'id': product.id}) }}">delete</a>

                                                        <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>


                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </section>

                            </div>

                        </div>
                    </div>
                </div>

