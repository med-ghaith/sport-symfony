{% extends 'back.base.html.twig' %}

{% block body %}

    <head>
        <!-- Required meta tags-->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Colorlib Templates">
        <meta name="author" content="Colorlib">
        <meta name="keywords" content="Colorlib Templates">

        <!-- Title Page-->
        <title>Au Register Forms by Colorlib</title>

        <!-- Icons font CSS-->
        <link href={{ asset("back/assets/vendor/mdi-font/css/material-design-iconic-font.min.css") }} rel="stylesheet"
              media="all">
        <link href={{ asset("back/assets/vendor/font-awesome-4.7/css/font-awesome.min.css") }} rel="stylesheet"
              media="all">
        <!-- Font special for pages-->
        <link href={{ asset("https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i") }} rel="stylesheet">

        <!-- Vendor CSS-->
        <link href={{ asset("back/assets/vendor/select2/select2.min.css") }} rel="stylesheet" media="all">
        <link href={{ asset("back/assets/vendor/datepicker/daterangepicker.css") }} rel="stylesheet" media="all">

        <!-- Main CSS-->
        <link href={{ asset("back/assets/css/main.css") }} rel="stylesheet" media="all">
    </head>
    <body>
    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="wrapper wrapper--w780">
            <div class="card card-3">
                <div class="card-heading"></div>
                <div class="card-body">

                    {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                    <h2>NAME</h2>
                    <div class="input-group">

                        {{ form_widget(form.name,) }}
                        {{ form_errors(form.name) }}

                    </div>

                    <h2>PRICE</h2>
                    <div class="input-group">
                        {{ form_widget(form.price) }}
                        {{ form_errors(form.price) }}

                    </div>
                    <h2>description</h2>
                    <div class="input-group">
                        {{ form_widget(form.description,{'attr':{'class':'input--style-3'}}) }}
                        {{ form_errors(form.description) }}

                    </div>
                    <h2>IMAGE</h2>
                    <div class="input-group">
                        {{ form_widget(form.imageUrl,{'attr':{'class':'input--style-3'}}) }}
                        {{ form_errors(form.imageUrl) }}
                    </div>
                    <h2>category</h2>
                    <div class="input-group">
                        {{ form_widget(form.category,{'attr':{'class':'input--style-3'}}) }}
                        {{ form_errors(form.category) }}
                    </div>

                    <div class="p-t-10">
                        <button class="btn btn--pill btn--green" type="submit">save</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src={{ asset("back/assets/vendor/jquery/jquery.min.js") }}></script>
    <!-- Vendor JS-->
    <script src={{ asset("back/assets/vendor/select2/select2.min.js" ) }}></script>
    <script src={{ asset("back/assets/vendor/datepicker/moment.min.js") }}></script>
    <script src={{ asset("back/assets/vendor/datepicker/daterangepicker.js") }}></script>

    <!-- Main JS-->
    <script src={{ asset("back/assets/js/global.js") }}></script>


    <!-- end document--></body>
{% endblock %}